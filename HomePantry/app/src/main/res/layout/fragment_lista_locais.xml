<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaLocaisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/txt_titulo_locais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/titulo_listas_locais"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <!-- Botão + alinhado à direita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btn_adicionar_local"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/desc_adicionar_local"
                android:src="@drawable/logoipl" />
        </LinearLayout>

        <!-- Barra de pesquisa -->
        <EditText
            android:id="@+id/et_pesquisar_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquisar"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp" />

        <!-- Lista de locais -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listas_locais"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp" />

    </LinearLayout>

</FrameLayout>
