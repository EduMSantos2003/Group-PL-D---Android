<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListasComprasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/txt_listas_compras_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_listas_compras"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Botão + alinhado à direita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btn_adicionar_lista_compra"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/desc_adicionar_lista_compra"
                android:src="@drawable/logoipl"/>
        </LinearLayout>

        <!-- Barra de pesquisa -->
        <EditText
            android:id="@+id/edt_pesquisa_listas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:hint="Pesquisar Lista"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <!-- RecyclerView com as listas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listas_compra"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</FrameLayout>
