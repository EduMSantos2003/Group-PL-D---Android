<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarNovoProdutoFragment">

    <ScrollView
        android:id="@+id/scroll_criar_produto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layout_criar_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp">

            <!-- Título -->
            <TextView
                android:id="@+id/txt_titulo_criar_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/titulo_criar_produto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Categoria (Spinner) -->
            <TextView
                android:id="@+id/label_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_categoria"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinner_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/prompt_categoria"/>

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_nome_produto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nome">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descrição -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_descricao_produto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Descrição">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Unidade -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_unidade_produto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Quantidade">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_unidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Preço -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_preco_produto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Preço do Produto">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_preco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Validade -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_validade_produto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Validade">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_validade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão escolher imagem -->
            <Button
                android:id="@+id/btn_escolher_imagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="end"
                android:text="@string/btn_escolher_imagem_criar_produto"/>

            <!-- Botão Guardar -->
            <Button
                android:id="@+id/btn_guardar_produto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="@string/btn_guardar_produto"
                android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>